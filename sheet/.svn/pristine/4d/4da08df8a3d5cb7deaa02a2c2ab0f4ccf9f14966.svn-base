	public Page<Record> mySuggest(String userId,String pageNum,String pageSize){
		
		String sql = "from dt_sheets s inner join dt_sheet_type t on s.type_code like '05_%' and s.sponsor_id="+userId+" and s.sponsor_type=1 and s.type_code=t.code inner join dt_sheet_info i on s.id=i.sheet_id"; 
		Page<Record> list = Db.paginate(Integer.parseInt(pageNum), Integer.parseInt(pageSize), "select s.*,t.title,t.short_title,t.merge_title,i.descr,i.pics", sql);
		
		return list;
		
	}
	
