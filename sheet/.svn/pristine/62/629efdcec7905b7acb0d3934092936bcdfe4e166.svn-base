$(function(){
	//用户提示
	$(".kf_name .kf_input1").blur(function(){
		var value = $(this).val();
		if(value == ''){
			$(".kf_tipname").css("display","block");
			$(".kf_name").addClass("kf_bordercolor");
		}else{
			$(".kf_tipname").css("display","none");
			$(".kf_name").removeClass("kf_bordercolor");
		}
	})
