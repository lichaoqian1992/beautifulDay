	function infoset(){
		
		var medalinfo=${medalinfo };
		
		var id=medalinfo.id;
		var title=medalinfo.title;
		var icon=medalinfo.icon;
		var type=medalinfo.type;
		var link_url=medalinfo.link_url;
		var is_lock=medalinfo.is_lock;

		$("#hiddenid").val(id);
		$("#title").val(title);
		$("#icon").val(icon);
		$("#type").val(type);
		$("#link_url").val(link_url);
		$("#is_lock").val(is_lock);


		

	};
	
	
	$("#subbutton").on("click",function(){

		$.ajax({
		type : "GET",
		url : "updMedal",
		dataType : "json",
		contentType : "application/json; charset=utf-8",
		data : {
			id:$("#hiddenid").val(),
			title:$("#title").val(),
			icon:$("#icon").val(),
			type:$("#type").val(),
			link_url:$("#link_url").val(),
			is_lock:$("#is_lock").val()
			
				},
		success : function(data) {
			if(data.status==0){
				location.reload();
			}else{
				alert("修改失败");
			}
		}
				
		})
	});
	
	

